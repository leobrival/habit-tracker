{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"lib": ["ES2023"],
		"module": "Node16",
		"target": "ES2022",
		"moduleResolution": "Node16",
		"strict": true,
		"declaration": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noUncheckedIndexedAccess": true,
		"jsx": "react-jsx",
		"outDir": "dist"
	},
	"include": ["src/**/*"]
}
