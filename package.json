{
	"name": "habit-tracker",
	"version": "0.1.0",
	"private": true,
	"description": "Habit tracking monorepo - API, Web App, Landing Page, and Raycast Extension",
	"scripts": {
		"dev": "turbo run dev",
		"dev:api": "turbo run dev --filter=@habit-tracker/api",
		"dev:web": "turbo run dev --filter=@habit-tracker/web",
		"dev:landing": "turbo run dev --filter=@habit-tracker/landing",
		"build": "turbo run build",
		"build:api": "turbo run build --filter=@habit-tracker/api",
		"build:web": "turbo run build --filter=@habit-tracker/web",
		"build:landing": "turbo run build --filter=@habit-tracker/landing",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"typecheck": "turbo run typecheck",
		"test": "turbo run test",
		"clean": "turbo run clean && rm -rf node_modules",
		"format": "biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.5",
		"turbo": "^2.5.4",
		"typescript": "~5.8"
	},
	"packageManager": "pnpm@9.15.0",
	"engines": {
		"node": ">=20.0.0"
	}
}
